{% for post in postslist | reverse %}
	<li>
		<a href="{{ post.url }}" class="postlist-link">{{city}}</a>
		<a href="{{ post.url }}">
			<img height="200px" width="100%" src="{% first_image post %}" style="object-fit: cover; max-width:100%;" />
		</a>
		<time class="postlist-date" datetime="{{ post.date | htmlDateString }}">{{ post.date | readableDate("LLLL yyyy") }}</time>
	</li>
{% endfor %}
